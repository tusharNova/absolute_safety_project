{
  "openapi": "3.0.0",
  "info": {
    "title": "Absolute Safety API",
    "version": "1.0.0",
    "description": "API for managing clients, engineers, and certification requests."
  },
  "servers": [
    {
      "url": "http://localhost/absolute_safety_project/webapp/api",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/clients": {
      "get": {
        "summary": "Get all clients",
        "responses": {
          "200": {
            "description": "List of clients"
          }
        }
      },
      "post": {
        "summary": "Create a new client",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Client created successfully"
          }
        }
      }
    },
    "/clients/{id}": {
      "get": {
        "summary": "Get a client by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Client data"
          },
          "404": {
            "description": "Client not found"
          }
        }
      },
      "put": {
        "summary": "Update a client by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Client updated successfully"
          }
        }
      },
      "delete": {
        "summary": "Delete a client by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Client deleted"
          }
        }
      }
    },
    "/engineers": {
      "get": {
        "summary": "Get all engineers",
        "responses": {
          "200": {
            "description": "List of engineers"
          }
        }
      },
      "post": {
        "summary": "Create a new engineer",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Engineer"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Engineer created successfully"
          }
        }
      }
    },
    "/engineers/{id}": {
      "get": {
        "summary": "Get an engineer by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Engineer data"
          }
        }
      },
      "put": {
        "summary": "Update an engineer by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Engineer"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Engineer updated"
          }
        }
      },
      "delete": {
        "summary": "Delete an engineer by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Engineer deleted"
          }
        }
      }
    },
    "/certification-requests": {
      "get": {
        "summary": "Get all certification requests",
        "responses": {
          "200": {
            "description": "List of certification requests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CertificationRequest"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new certification request",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CertificationRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Certification request created successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/certification-requests/{id}": {
      "get": {
        "summary": "Get a certification request by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Certification request data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CertificationRequest"
                }
              }
            }
          },
          "404": {
            "description": "Request not found"
          }
        }
      },
      "put": {
        "summary": "Update a certification request",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CertificationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Certification request updated"
          }
        }
      },
      "delete": {
        "summary": "Delete a certification request",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Certification request deleted"
          }
        }
      }
    },
    "/certification-requests/client/{client_id}": {
      "get": {
        "summary": "Get certification requests by client ID",
        "parameters": [
          {
            "name": "client_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of certification requests for the client",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CertificationRequest"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/certification-requests/engineer/{engineer_id}": {
      "get": {
        "summary": "Get certification requests by engineer ID",
        "parameters": [
          {
            "name": "engineer_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of certification requests assigned to the engineer",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CertificationRequest"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/certification-requests/{id}/status": {
      "put": {
        "summary": "Update certification request status",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["pending", "under_review", "completed", "certified"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status updated successfully"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Client": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" },
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "email": { "type": "string" },
          "company_name": { "type": "string" },
          "contact": { "type": "string" },
          "address": { "type": "string" },
          "state": { "type": "string" },
          "pincode": { "type": "string" },
          "status": { "type": "string" }
        }
      },
      "Engineer": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" },
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "email": { "type": "string" },
          "contact": { "type": "string" },
          "area": { "type": "string" },
          "experience_years": { "type": "string" }
        }
      },
      "CertificationRequest": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "readOnly": true },
          "client_id": { "type": "integer" },
          "machine_name": { "type": "string" },
          "machine_details": { "type": "string" },
          "request_date": { "type": "string", "format": "date-time" },
          "assigned_engineer": { "type": "integer" },
          "status": { 
            "type": "string",
            "enum": ["pending", "under_review", "completed", "certified"],
            "default": "pending"
          },
          "expiry_months": { "type": "integer" }
        },
        "required": ["client_id", "machine_name"]
      }
    }
  }
}